@model Firmness.WebAdmin.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null; // No usamos el layout con sidebar
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Firmness Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">

    <div class="w-full max-w-md bg-white rounded-xl shadow-lg p-8">
        <div class="text-center mb-6">
            <div class="flex justify-center mb-2">
                <img src="https://cdn-icons-png.flaticon.com/512/5968/5968409.png" class="h-12 w-12" alt="Logo">
            </div>
            <h1 class="text-2xl font-bold text-gray-800">Welcome Back ðŸ‘‹</h1>
            <p class="text-gray-500">Sign in to access your admin dashboard</p>
        </div>

        <form asp-action="Login" method="post" class="space-y-5">
            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input asp-for="Email" class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="your@email.com" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                <input asp-for="Password" type="password" class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" />
                <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
            </div>

            <div class="flex items-center justify-between">
                <label class="flex items-center text-sm text-gray-600">
                    <input asp-for="RememberMe" class="mr-2 rounded border-gray-300 text-blue-600 focus:ring-blue-500" />
                    Remember me
                </label>
                <a href="#" class="text-sm text-blue-600 hover:underline">Forgot password?</a>
            </div>

            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 rounded-lg transition">
                Sign In
            </button>
        </form>

        <p class="text-center text-sm text-gray-500 mt-6">
            Donâ€™t have an account?
            <a asp-controller="Account" asp-action="Register" class="text-blue-600 hover:underline font-medium">
                Register
            </a>
        </p>
    </div>

</body>
</html>
