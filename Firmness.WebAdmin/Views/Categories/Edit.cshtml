@model Firmness.WebAdmin.Models.EditCategoryViewModel;

@{
    ViewData["Title"] = "Edit Category";
}

<main class="flex-1 p-6 sm:p-8 lg:p-10">
    <div class="max-w-4xl mx-auto">
        
        <!-- Breadcrumbs -->
        <div class="flex flex-wrap gap-2 mb-4">
            <a class="text-[#4e7397] dark:text-slate-400 text-sm font-medium leading-normal hover:text-primary dark:hover:text-primary" asp-controller="Home" asp-action="Index">Home</a>
            <span class="text-[#4e7397] dark:text-slate-400 text-sm font-medium leading-normal">/</span>
            <a class="text-[#4e7397] dark:text-slate-400 text-sm font-medium leading-normal hover:text-primary dark:hover:text-primary" asp-action="Index">Categories</a>
            <span class="text-[#4e7397] dark:text-slate-400 text-sm font-medium leading-normal">/</span>
            <span class="text-[#0e141b] dark:text-slate-200 text-sm font-medium leading-normal">Edit category</span>
        </div>
        
        <!-- Page Heading -->
        <div class="flex flex-wrap justify-between gap-3 mb-8">
            <p class="text-[#0e141b] dark:text-white text-4xl font-black leading-tight tracking-[-0.033em] min-w-72">Edit Category</p>
        </div>
        
        <!-- Form Container -->
        <div class="bg-white dark:bg-slate-900/70 p-6 sm:p-8 rounded-xl shadow-sm border border-slate-200 dark:border-slate-800">
            <form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-6">
                
                <!-- Id (Hidden - required for model binding) -->
                <input type="hidden" asp-for="Id" />
                
                <!-- Id Display (Read-only) -->
                <div class="md:col-span-2">
                    <label class="flex flex-col">
                        <p class="text-sm font-medium leading-normal pb-2 text-[#0e141b] dark:text-slate-300">Id</p>
                        <input class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-[#4e7397] dark:text-slate-400 focus:outline-0 focus:ring-0 border border-[#d0dbe7] dark:border-slate-700 bg-slate-100 dark:bg-slate-800 focus:border-[#d0dbe7] dark:focus:border-slate-600 h-12 placeholder:text-[#4e7397] px-4 text-base font-normal leading-normal cursor-not-allowed" readonly type="text" value="@Model.Id"/>
                    </label>
                </div>
                
                <!-- Name -->
                <div>
                    <label class="flex flex-col">
                        <p class="text-sm font-medium leading-normal pb-2 text-[#0e141b] dark:text-slate-300">Name</p>
                        <input asp-for="Name" class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-[#0e141b] dark:text-slate-200 focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-[#d0dbe7] dark:border-slate-700 bg-white dark:bg-slate-900 focus:border-primary dark:focus:border-primary h-12 placeholder:text-[#4e7397] px-4 text-base font-normal leading-normal" placeholder="e.g. Martillo Demoledor ElÃ©ctrico"/>
                        <span asp-validation-for="Name" class="text-red-500 text-sm mt-1"></span>
                    </label>
                </div>
                
                <!-- Action Buttons -->
                <div class="md:col-span-2 flex justify-end items-center gap-3 pt-4 mt-4 border-t border-slate-200 dark:border-slate-800">
                    <a asp-action="Index" class="px-5 py-2.5 rounded-lg text-sm font-semibold text-center text-[#0e141b] dark:text-slate-200 bg-slate-100 dark:bg-slate-800 hover:bg-slate-200 dark:hover:bg-slate-700 transition-colors">Cancel</a>
                    <button type="submit" class="px-5 py-2.5 rounded-lg text-sm font-semibold text-center text-white bg-primary hover:bg-primary/90 transition-colors flex items-center gap-2">
                        <span class="material-symbols-outlined text-base">save</span>
                        Save changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</main>
