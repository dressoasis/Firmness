@model Firmness.WebAdmin.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<h1 class="text-3xl font-bold text-gray-900 mb-6">Dashboard Overview</h1>

<div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
    <div class="flex flex-col gap-2 rounded-xl p-6 bg-white border border-gray-200 shadow-sm">
        <div class="flex items-center justify-between">
            <p class="text-base font-medium text-gray-600">Total Products</p>
            <div class="p-2 rounded-lg bg-blue-100 text-blue-600">
                <span class="material-symbols-outlined">inventory_2</span>
            </div>
        </div>
        <p class="text-3xl font-bold text-gray-900">@Model.TotalProducts</p>
    </div>

    <div class="flex flex-col gap-2 rounded-xl p-6 bg-white border border-gray-200 shadow-sm">
        <div class="flex items-center justify-between">
            <p class="text-base font-medium text-gray-600">Total Customers</p>
            <div class="p-2 rounded-lg bg-blue-100 text-blue-600">
                <span class="material-symbols-outlined">group</span>
            </div>
        </div>
        <p class="text-3xl font-bold text-gray-900">@Model.TotalCustomers</p>
    </div>

    <div class="flex flex-col gap-2 rounded-xl p-6 bg-white border border-gray-200 shadow-sm">
        <div class="flex items-center justify-between">
            <p class="text-base font-medium text-gray-600">Total Sales</p>
            <div class="p-2 rounded-lg bg-blue-100 text-blue-600">
                <span class="material-symbols-outlined">attach_money</span>
            </div>
        </div>
        <p class="text-3xl font-bold text-gray-900">@Model.TotalSales.ToString("C")</p>
    </div>
</div>

<div class="p-6 mt-6 bg-white border border-gray-200 rounded-xl shadow-sm">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Content Area</h2>
    <p class="text-gray-600">
        Add charts, tables, or recent activity here to enhance the dashboard experience.
    </p>
</div>
